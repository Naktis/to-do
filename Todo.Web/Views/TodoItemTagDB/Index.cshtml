@model IEnumerable<Todo.Web.ViewModels.TodoItemTagViewModel>

@{
    ViewData["Title"] = "To-do items and tags";
}

<h1>To-do items and tags</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TodoItem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tag)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TodoItem.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tag.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { todoItemID = item.TodoItemID, tagID = item.TagID }) |
                @Html.ActionLink("Details", "Details", new { todoItemID = item.TodoItemID, tagID = item.TagID }) |
                @Html.ActionLink("Delete", "Delete", new { todoItemID = item.TodoItemID, tagID = item.TagID })
            </td>
        </tr>
}
    </tbody>
</table>
